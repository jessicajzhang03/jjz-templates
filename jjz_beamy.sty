%%%% (SUB)SECTION HEADINGS 
\AtBeginSection[]{
	\begingroup
	\setbeamertemplate{footline}{}
	\begin{frame}[noframenumbering]
		\vspace{35mm}
		\vfill
		\raggedright
		\usebeamerfont{title}{\color{middleblue!75!lightestblue} Section \thesection} \\ \insertsectionhead
		\vfill
	\end{frame}
	\endgroup
}

\AtBeginSubsection[]{
	\begin{frame}[noframenumbering]
		\vspace{5mm}
		\vfill
		\centering
		\usebeamerfont{title}Section \thesection.\thesubsection: \insertsubsectionhead
		\vfill
	\end{frame}
}
